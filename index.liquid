                <span class="mauticform-errormsg" style="display: none;">Erforderlich</span>
            </div>

            <div id="mauticform_prokosignup_email" class="mauticform-row mauticform-email mauticform-field-3 mauticform-required col-md-6  mt-2" data-validate="email" data-validation-type="email">
                <input id="mauticform_input_prokosignup_email" name="mauticform[email]" value="" placeholder="E-Mail Adresse" class="mauticform-input form-control" type="email" />
                <span class="mauticform-errormsg" style="display: none;">Erforderlich</span>
            </div>

            <div id="mauticform_prokosignup_telefon" class="mauticform-row mauticform-text mauticform-field-4 col-md-6  mt-2">
                <input id="mauticform_input_prokosignup_telefon" name="mauticform[telefon]" value="" placeholder="ggf. Telefonnummer" class="mauticform-input form-control" type="text" />
                <span class="mauticform-errormsg" style="display: none;"></span>
            </div>

            <div id="mauticform_prokosignup_organisation" class="mauticform-row mauticform-text mauticform-field-5 col-md-12 mt-2">
                <input id="mauticform_input_prokosignup_organisation" name="mauticform[organisation]" value="" placeholder="(ggf.) Organisation" class="mauticform-input form-control" type="text" />
                <span class="mauticform-errormsg" style="display: none;"></span>
            </div>

            <div id="mauticform_prokosignup_optionen" class="mauticform-row mauticform-checkboxgrp mauticform-field-6 col-md-12 my-3">
                    <label id="mauticform_checkboxgrp_label_optionen_koalition0" for="mauticform_checkboxgrp_checkbox_optionen_koalition0" class="mauticform-checkboxgrp-label">
                        <input  class="mauticform-checkboxgrp-checkbox" name="mauticform[optionen][]" id="mauticform_checkboxgrp_checkbox_optionen_koalition0" type="checkbox" value="koalition" />
